<%= form_for(@job_posting) do |f| %>
  <% if @job_posting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job_posting.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job_posting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><span class="help" alt="The title of the position">?</span><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :affiliation %><span class="help" alt="Your company affiliation, or 'Individual' if none">?</span><br />
    <%= f.text_field :affiliation %>
  </div>
  <div class="field">
    <%= f.label :description %><span class="help" alt="A description of the position, including requirements">?</span><br />
    <%= f.text_area :description %>
  </div>
  <div class="form_row">
    <label for "jobtype">Job Type:</label><span class="help" alt="Is the position an internship or a part-time or full-time job?">?</span>
    <%  ['Full Time', 'Part Time', 'Internship'].each do |jobtype| %>
      <br><%= f.radio_button :jobtype, jobtype %>
      <%= jobtype.humanize %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :deadline %><span class="help" alt="When must all applications be received?">?</span><br />
    <%= f.date_select :deadline %>
  </div>
  <div class="field">
    <%= f.label 'Contact Email' %><span class="help" alt="How can you be contacted?">?</span><br />
    <%= f.text_field :contact %>
  </div>
  <div class="field">
    <%= f.label :url %><span class="help" alt="Is there a website people can visit for more information?">?</span><br />
    <%= f.text_field :url %><br />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
